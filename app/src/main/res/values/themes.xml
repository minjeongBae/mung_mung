<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mungmung" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/first_brown</item>
        <item name="colorPrimaryVariant">@color/second_brown</item>
        <item name="colorOnPrimary">@color/third_brown</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/light_green</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/Custom.Toolbar</item>
        <!-- <item name="android:windowFullscreen">true</item> -->
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Custom.Toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@color/second_brown</item>
    </style>
    <style name="Custom.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/second_brown</item>
        <item name="android:textColorPrimary">@color/first_brown</item>

    </style>
    <style name="Theme.Mungmung.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Mungmung.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>